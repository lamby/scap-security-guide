<def-group>
  <definition class="compliance" id="mount_option_tmp_noexec" version="1">
    <metadata>
      <title>Add noexec Option to /tmp</title>
      <affected family="unix">
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>Executables should not exist
      within temporary directories like /tmp. The noexec mount option should be
      specified for /tmp. Beware that some packages may use /tmp to store executables.
      It may be necessary to pre-hook a remount,exec of /tmp before upgrade and to post-hook
      a remount,noexec in the apt config.</description>
    </metadata>
    <criteria>
      <criterion comment="noexec on /tmp" test_ref="test_noexec_tmp" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_noexec_tmp" version="1" comment="noexec on /tmp">
    <linux:object object_ref="object_tmp_noexec_partition" />
    <linux:state state_ref="state_tmp_noexec" />
  </linux:partition_test>
  <linux:partition_object id="object_tmp_noexec_partition" version="1">
    <linux:mount_point>/tmp</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_tmp_noexec" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">noexec</linux:mount_options>
  </linux:partition_state>
</def-group>
