<def-group>
  <definition class="compliance" id="mount_option_var_noexec" version="1">
    <metadata>
      <title>Add noexec Option to /var</title>
      <affected family="unix">
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>Executables should not exist
      within /var directory. The noexec mount option should be
      specified for /var.</description>
    </metadata>
    <criteria>
      <criterion comment="noexec on /var" test_ref="test_noexec_var" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_noexec_var" version="1" comment="noexec on /var">
    <linux:object object_ref="object_var_noexec_partition" />
    <linux:state state_ref="state_var_noexec" />
  </linux:partition_test>
  <linux:partition_object id="object_var_noexec_partition" version="1">
    <linux:mount_point>/var</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_var_noexec" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">noexec</linux:mount_options>
  </linux:partition_state>
</def-group>
