<def-group>
  <definition class="compliance" id="mount_option_boot_nosuid" version="1">
    <metadata>
      <title>Add nosuid Option to /boot</title>
      <affected family="unix">
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>Suid executables should not exist
      within the /boot directory. The nosuid mount option should be
      specified for /boot.</description>
    </metadata>
    <criteria>
      <criterion comment="nosuid on /boot" test_ref="test_nosuid_boot" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_nosuid_boot" version="1" comment="nosuid on /boot">
    <linux:object object_ref="object_boot_nosuid_partition" />
    <linux:state state_ref="state_boot_nosuid" />
  </linux:partition_test>
  <linux:partition_object id="object_boot_nosuid_partition" version="1">
    <linux:mount_point>/boot</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_boot_nosuid" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">nosuid</linux:mount_options>
  </linux:partition_state>
</def-group>
