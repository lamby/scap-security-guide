<def-group>
  <definition class="compliance" id="mount_option_boot_noexec" version="1">
    <metadata>
      <title>Add noexec Option to /boot</title>
      <affected family="unix">
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>Executables should not exist
      within /boot directory. The noexec mount option should be
      specified for /boot.</description>
    </metadata>
    <criteria>
      <criterion comment="noexec on /boot" test_ref="test_noexec_boot" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_noexec_boot" version="1" comment="noexec on /boot">
    <linux:object object_ref="object_boot_noexec_partition" />
    <linux:state state_ref="state_boot_noexec" />
  </linux:partition_test>
  <linux:partition_object id="object_boot_noexec_partition" version="1">
    <linux:mount_point>/boot</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_boot_noexec" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">noexec</linux:mount_options>
  </linux:partition_state>
</def-group>
