<def-group>
  <definition class="compliance" id="partition_for_var_lib" version="1">
    <metadata>
      <title>Ensure /var/lib Located On Separate Partition</title>
      <affected family="unix">
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>On Ubuntu and Debian distribution, /var/lib may contains
        executables and big volumes of data (packages pre/post scripts, databases)
        it should have its own partition or logical volume.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_var_lib_partition" comment="/var/lib on own partition" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_var_lib_partition" version="1" comment="/var/lib on own partition">
    <linux:object object_ref="object_mount_var_lib_own_partition" />
  </linux:partition_test>
  <linux:partition_object id="object_mount_var_lib_own_partition" version="1">
    <linux:mount_point>/var/lib</linux:mount_point>
  </linux:partition_object>
</def-group>
