<def-group>
  <definition class="compliance" id="mount_option_var_nodev" version="1">
    <metadata>
      <title>Add nodev Option to /var</title>
      <affected family="unix">
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>Legitimate character and block devices should not exist
      within the /var directory. The nodev mount option should be
      specified for /var.</description>
    </metadata>
    <criteria>
      <criterion comment="nodev on /var" test_ref="test_nodev_var" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_nodev_var" version="1" comment="nodev on /var">
    <linux:object object_ref="object_var_nodev_partition" />
    <linux:state state_ref="state_var_nodev" />
  </linux:partition_test>
  <linux:partition_object id="object_var_nodev_partition" version="1">
    <linux:mount_point>/var</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_var_nodev" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">nodev</linux:mount_options>
  </linux:partition_state>
</def-group>
