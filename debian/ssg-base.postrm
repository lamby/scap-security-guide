#!/bin/sh
set -e

# delete parent dir for other ssg bin packages at postrm for
# dependency management 
case $1 in
	purge)
	  if [ -d /usr/share/ssg ]; then
	    rmdir /usr/share/ssg
          fi
	  if [ -d /usr/share/doc/ssg ]; then
	    rmdir /usr/share/doc/ssg
          fi
        ;;
esac

